<% content_for :head do %>
  <title>KyaraList</title>
  <script async src="https://use.fontawesome.com/0fcd2e2f30.js"></script>
  <% stylesheet = @is_mobile ? "mobile.css" : "app_style.css" %>
  <link rel="stylesheet" type="text/css"
        href="<%= resolve_asset_path(stylesheet) %>"/>
<% end %>

<% content_for :content do %>
  <%= render partial: "/partials/facebook_sdk" %>
  <script>
    window.storeData = <%== render( file: 'json/store_data.json.jbuilder', locals: {strings_partial: @strings_partial}) %>
  </script>
  <script src="<%= resolve_asset_path("lib.js") %>" crossorigin="anonymous"></script>
  <script src="<%= resolve_asset_path("app.js") %>" crossorigin="anonymous" async></script>
<% end %>
